{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "PYTHONPATH": "src",
    "FLASK_DEBUG": "false",
    "SECRET_KEY": "production-secret-key-hargi-dashboard-2024",
    "CORS_ORIGINS": "*",
    "EXCEL_FILE_PATH": "./DASHBOARDHARGI.xlsx",
    "NEBIUS_API_KEY": "@nebius_api_key"
  }
}